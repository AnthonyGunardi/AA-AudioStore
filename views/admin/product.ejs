<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Product Data</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">

</head>
<body>
  <%- include('../partials/_navbarAdmin.ejs') %>

  <hr>
  <h4>Product Data</h4>
  <br><hr>
  <a href="/admins/products/add" class= "btn btn-primary" role="button"> Add Product </a><br>
  <div class="table-responsive-md">
    <table class="table table-sm">
      <thead>
        <tr>
          <th scope="col">Brand</th>
          <th scope="col">Type</th>
          <th scope="col">Price</th>
          <th scope="col">Stock</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% data.forEach((e)=>{ %>
          <tr>
            <td><%= e.brand %> </td>
            <td><%= e.type %> </td>
            <td><%= e.price %> </td>
            <td><%= e.stock %> </td>
            <td><a href="/admins/products/edit/<%= e.id %>" class= "btn btn-primary" role="button"> Edit </a> <a href="/admins/products/delete/<%= e.id %>" role="button" class="btn btn-danger"> Delete</a></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
  <%- include('../partials/_script.ejs') %>
</body>
</html>